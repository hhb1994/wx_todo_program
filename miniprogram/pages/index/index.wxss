/* miniprogram/pages/index/index.wxss */
Page {
  background: black;
  color: white;
  width: 100vw;
}
.flex {
  display: flex;
  justify-content: start;
}

.isDonePopup {
  background-color: #38495c !important;
}

.v-custom-class {
  /* background-color: #da5852 !important; */
  border: none !important;
}

.line-through {
  text-decoration: line-through;
}

.add-icon {
  margin-left: 2vw;
}
.todo-pane {
  width: 100vw;
  height: 220rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  color: #cbd6dd;
}

.todo-pane-view {
  width: 140vw;
  height: 100%;
  display: flex;
}
.todo-pane-left {
  width: 96vw;
  margin-left: 2vw;
  height: 100%;
  background-color: #38495c;
  border-radius: 30rpx;
}
.todo-pane-right {
  height: 100%;
  width: 18vw;
  margin-left: 2vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.todo-pane-right-button {
  width: 12vw;
  height: 12vw;
  background-color: #da5852;
  border-radius: 50%;
}
.confirm {
  background-color: green;
}
.confirm2 {
  background-color: #556169;
}
.delete {
  background-color: #da5852;
}

.todo-pane-right-button image {
  object-fit: fill;
  margin-top: 15%;
  margin-left: 15%;
  width: 70%;
  height: 70%;
}

.todo-pane-title {
  font-size: 50rpx;
  font-weight: 900;
  padding-top: 10rpx;
  padding-left: 30rpx;
}
.todo-pane-address {
  font-size: 30rpx;
  padding-left: 30rpx;
}
.todo-pane-date {
  font-size: 30rpx;
  padding-left: 30rpx;
}

.todo-pane-remark {
  font-size: 30rpx;
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.foot {
  width: 100vw;
  height: 20rpx;
}

.picker-column {
  line-height: 50px;
  color: #38495c;
  text-align: center;
}
.menu{
  margin-left: 2vw;
  margin-bottom: 5rpx;
}
.isDoneFilter {
  color: #38495c;
  size: 12px;
  margin-right: 30rpx;
}
.inDateFilter{
  color: #38495c;
  size: 12px;
}
